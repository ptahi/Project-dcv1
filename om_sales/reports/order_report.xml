<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- ========================= -->
    <!-- QWEB TEMPLATE PDF -->
    <!-- ========================= -->
    <template id="report_shopping_cart_document">
        <t t-call="web.external_layout">

            <main>
                <t t-foreach="docs" t-as="o">
                    <div class="page"
                         style="font-family: 'DejaVu Sans', sans-serif;
                                font-size: 13px;
                                color: #212529;">

                        <!-- TIÊU ĐỀ -->
                        <h2 style="text-align:center;
                                   font-weight:700;
                                   letter-spacing:1px;
                                   margin-bottom:20px;">
                             ĐƠN HÀNG
                        </h2>

                        <p style="text-align:center;
                                  font-size:14px;
                                  margin-top:-10px;">
                            Mã đơn: <strong><t t-esc="o.name"/></strong>
                        </p>

                        <hr style="margin: 20px 0;"/>

                        <!-- THÔNG TIN KHÁCH HÀNG -->
                        <div style="line-height:1.7;">
                            <p>
                                <strong style="min-width:120px; display:inline-block;">
                                    Khách hàng:
                                </strong>
                                <t t-esc="o.customer_name"/>
                            </p>

                            <p>
                                <strong style="min-width:120px; display:inline-block;">
                                    Email:
                                </strong>
                                <t t-esc="o.customer_email"/>
                            </p>

                            <p>
                                <strong style="min-width:120px; display:inline-block;">
                                    Số điện thoại:
                                </strong>
                                <t t-esc="o.customer_phone"/>
                            </p>

                            <p>
                                <strong style="min-width:120px; display:inline-block;">
                                    Địa chỉ:
                                </strong>
                                <t t-esc="o.customer_address"/>
                            </p>

                            <p>
                                <strong style="min-width:120px; display:inline-block;">
                                    Ngày đặt:
                                </strong>
                                <t t-esc="o.date_order and o.date_order.strftime('%d/%m/%Y %H:%M')"/>
                            </p>
                        </div>

                        <br/>

                        <!-- BẢNG SẢN PHẨM -->
                        <table class="table table-sm table-bordered"
                               style="font-size:13px;">
                            <thead style="background-color:#f1f3f5;">
                                <tr>
                                    <th style="font-weight:600;">Sản phẩm</th>
                                    <th class="text-center" style="font-weight:600;">Số lượng</th>
                                    <th class="text-end" style="font-weight:600;">Đơn giá</th>
                                    <th class="text-end" style="font-weight:600;">Thành tiền</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="o.cart_line_ids" t-as="line">
                                    <tr>
                                        <td>
                                            <t t-esc="line.product_id.name"/>
                                        </td>
                                        <td class="text-center">
                                            <t t-esc="line.quantity"/>
                                        </td>
                                        <td class="text-end">
                                            <t t-esc="'{:,.0f}'.format(line.price_unit)"/> ₫
                                        </td>
                                        <td class="text-end">
                                            <strong>
                                                <t t-esc="'{:,.0f}'.format(line.price_subtotal)"/> ₫
                                            </strong>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>

                        <br/>

                        <!-- TỔNG TIỀN -->
                        <div style="text-align:right;
                                    font-size:15px;
                                    margin-top:10px;">
                            <span style="font-weight:600;">
                                Tổng tiền:
                            </span>
                            <span style="font-weight:700; font-size:16px;">
                                <t t-esc="'{:,.0f}'.format(o.total_price)"/> ₫
                            </span>
                        </div>

                        <hr style="margin: 25px 0;"/>

                        <!-- FOOTER NHẸ -->
                        <p style="text-align:center;
                                  font-size:11px;
                                  color:#6c757d;">
                            Cảm ơn bạn đã mua hàng tại cửa hàng của chúng tôi
                        </p>

                    </div>
                </t>
            </main>
        </t>
    </template>

    <!-- ========================= -->
    <!-- REPORT ACTION -->
    <!-- ========================= -->
    <record id="action_report_shopping_cart" model="ir.actions.report">
        <field name="name">In đơn hàng</field>
        <field name="model">sm.shopping.cart</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">om_sales.report_shopping_cart_document</field>
        <field name="report_file">om_sales.report_shopping_cart_document</field>
        <field name="print_report_name">'DonHang_%s' % (object.name)</field>
    </record>

</odoo>

<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_dsm_customer_readonly_tree" model="ir.ui.view" >
            <field name="name">sm.customer.readonly.tree</field>
            <field name="model">sm.customer</field>
                 <field name="priority">20</field>
            <field name="arch" type="xml">
                <tree string="customer" create="0" delete="0" edit="0">

                    <field name="name"/>
                    <field name="phone"/>
                    <field name="email" optional="show"/>
                    <field name="address"/>
                    <field name="gender" optional="hide"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>
    <record id="view_dsm_customer_readonly_form" model="ir.ui.view" >
            <field name="name">sm.customer.readonly.form</field>
            <field name="model">sm.customer</field>
            <field name="arch" type="xml">
                <form string="customer" create="0" delete="0" edit="0">
                    <sheet>
                     <group>
                        <group>
                            <field name="name"/>
                            <field name="address"/>
                        </group>
                        <group>
                            <field name="phone"/>
                            <field name="email"/>
                        </group>
                        <group>
                            <field name="gender"/>
                        </group>
                        <group>
                            <field name="active"/>
                        </group>
                     </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="message_ids"/>
                    </div>

                </form>
            </field>
        </record>

     <record id="action_sm_customer_readonly" model="ir.actions.act_window">
         <field name="name">View custromer</field>
         <field name="res_model">sm.customer</field>
         <field name="view_mode">tree,form</field>
         <field name="view_ids" eval="[Command.clear(),
                          (0,0,{'view_mode':'tree','view_id': ref('view_dsm_customer_readonly_tree')}),
                          (0,0,{'view_mode':'form', 'view_id': ref('view_dsm_customer_readonly_form')})]"/>

         <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
             Create a new product
            </p>
         </field>
     </record>
</odoo>
<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="checkout_page" name="Checkout Page">
        <t t-call="om_sales.website_layout">
            <div id="wrap" class="checkout-page js-checkout-page container py-5">

                <h1 class="mb-4">Thanh toán đơn hàng</h1>

                <div class="row">
                    <!-- ================= LEFT: CART ================= -->
                    <div class="col-md-7">
                        <h4 class="mb-3">Sản phẩm</h4>



                        <div id="checkout-cart" class="d-none">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Sản phẩm</th>
                                        <th class="text-center">SL</th>
                                        <th class="text-end">Giá</th>
                                    </tr>
                                </thead>
                                <tbody id="checkout-cart-body">
                                    <!-- JS render -->
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th colspan="2">Tổng cộng</th>
                                        <th class="text-end" id="checkout-total">0 ₫</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>

                    <!-- ================= RIGHT: FORM ================= -->
                    <div class="col-md-5">
                        <h4 class="mb-3">Thông tin khách hàng</h4>

                        <form id="checkout-form" method="post" action="/checkout/submit">

    <!-- CSRF TOKEN -->
    <input type="hidden"
           name="csrf_token"
           t-att-value="request.csrf_token()"/>

    <!--  GIỎ HÀNG -->
    <input type="hidden" name="cart_data"/>

    <div class="mb-3">
        <label class="form-label">Họ và tên *</label>
        <input type="text"
               name="name"
               class="form-control"
               required="required"/>
    </div>

    <div class="mb-3">
        <label class="form-label">Số điện thoại *</label>
        <input type="text"
               name="phone"
               class="form-control"
               required="required"/>
    </div>
                            <div class="mb-3">
        <label class="form-label">Email *</label>
        <input    type="email"
                  name="email"
                  class="form-control"
                  required="required"/>
    </div>

    <div class="mb-3">
        <label class="form-label">Địa chỉ *</label>
        <textarea name="address"
                  class="form-control"
                  rows="3"
                  required="required"/>
    </div>


    <button type="submit" class="btn btn-success w-100">
        Xác nhận đặt hàng
    </button>

    <div class="mt-3 text-center">
    <a href="/shop" class="btn btn-outline-secondary">
        <i class="fa fa-arrow-left"></i> Tiếp tục mua hàng
    </a>
</div>
</form>

                    </div>
                </div>

            </div>
        </t>
    </template>
</odoo>
